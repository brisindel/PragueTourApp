<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="87dp"
        android:layout_height="62dp"
        android:layout_marginRight="5dp" />

    <RelativeLayout
        android:id="@+id/text_containter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_namePlace"
            style="@style/TextLV"
            android:layout_toLeftOf="@+id/play_button"
            android:layout_toStartOf="@+id/play_button"
            android:hint="@string/app_name"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_textPlace"
            style="@style/TextLV"
            android:layout_below="@+id/tv_namePlace"
            android:layout_toLeftOf="@+id/play_button"
            android:layout_toStartOf="@+id/play_button"
            android:hint="textCity" />

        <TextView
            android:id="@+id/tv_mobile"
            style="@style/TextLV"
            android:layout_below="@+id/tv_textPlace"
            android:layout_toLeftOf="@+id/play_button"
            android:layout_toStartOf="@+id/play_button"
            android:hint="+420 123 456 789" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play_arrow" />
    </RelativeLayout>

</LinearLayout>